<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pixelate.mappassignmentv1_1.UserProfile$PlaceholderFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/userProfile_PhoneIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/section_label"
        app:srcCompat="@drawable/contact_phone" />

    <TextView
        android:id="@+id/userProfile_PhoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="userProfile_PhoneTextView"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_alignStart="@+id/userProfile_PhoneIcon"
        android:layout_toEndOf="@+id/userProfile_PhoneIcon" />

    <TextView
        android:id="@+id/userProfile_MobileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/userProfile_PhoneTextView"
        android:layout_below="@+id/userProfile_PhoneTextView"
        android:layout_marginTop="5dp"
        android:text="Mobile"
        android:textColor="@color/input_login_hint"/>

    <ImageView
        android:id="@+id/userProfile_EmailIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/userProfile_PhoneIcon"
        android:layout_below="@+id/userProfile_PhoneIcon"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/contact_shape" />

    <TextView
        android:id="@+id/userProfile_EmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignStart="@+id/userProfile_MobileText"
        android:layout_alignTop="@+id/userProfile_EmailIcon"
        android:text="userProfile_EmailTextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/userProfile_EmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/userProfile_EmailTextView"
        android:layout_below="@+id/userProfile_EmailTextView"
        android:layout_marginTop="5dp"
        android:text="Email"
        android:textColor="@color/input_login_hint"/>

    <ImageView
        android:id="@+id/userProfile_LocationIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/userProfile_EmailIcon"
        android:layout_below="@+id/userProfile_EmailIcon"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/contact_location" />

    <TextView
        android:id="@+id/userProfile_LocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignStart="@+id/userProfile_EmailText"
        android:layout_alignTop="@+id/userProfile_LocationIcon"
        android:text="userProfile_LocationTextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/userProfile_LocationTextView"
        android:layout_below="@+id/userProfile_LocationTextView"
        android:layout_marginTop="5dp"
        android:text="Location"
        android:textColor="@color/input_login_hint" />


</RelativeLayout>
